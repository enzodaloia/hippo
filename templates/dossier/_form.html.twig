{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="mb-3">
        {{ form_label(form.libelle, 'Libellé du Dossier (*)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.libelle, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le libellé du dossier'}}) }}
        <div class="invalid-feedback">
            Veuillez entrer un libellé valide.
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.description, 'Description du Dossier', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Ajoutez une description (facultatif)'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.ext, 'Sélectionner un Fichier (*)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.ext, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mt-3 mb-3 text-center">
        <button type="submit" class="btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
    </div>
{{ form_end(form) }}
