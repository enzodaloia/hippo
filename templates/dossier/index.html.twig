{% block stylesheets %}
    <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('node_modules/datatables.net-bs5/css/dataTables.bootstrap5.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('node_modules/@fortawesome/fontawesome-free/css/all.min.css') }}">
{% endblock %}
{% block body %}
    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col">
                <a href="{{ path('app_dossier_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title text-center">Liste des Dossiers</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered" id="dossierTable">
                    <thead>
                        <tr>
                            <th>Libelle</th>
                            <th>Image</th>
                            <th>Créé le</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for dossier in dossiers %}
                        <tr>
                            <td>{{ dossier.libelle }}</td>
                            <td>{{ dossier.ext }}</td>
                            <td>{{ dossier.createdAt ? dossier.createdAt|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('app_dossier_show', {'id': dossier.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('app_dossier_edit', {'id': dossier.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun dossier trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('node_modules/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#dossierTable').DataTable();
        });
    </script>
{% endblock %}