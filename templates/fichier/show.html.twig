{% block stylesheets %}
    <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('node_modules/datatables.net-bs5/css/dataTables.bootstrap5.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('node_modules/@fortawesome/fontawesome-free/css/all.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex">
            <div class="gap-2">
                <a href="{{ path('app_dossier_show', {'token': fichier.folder.token}) }}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
                <a href="{{ path('app_fichier_edit', {'token': fichier.token}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
            </div>
            <div class="ms-auto justify-content-center align-items-center">
                {{ include('fichier/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="mb-0">Détails du Fichier</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Images</th>
                            <td>
                                {% set path = 'img/imgFichier/' ~ fichier.token ~ '.' ~ fichier.ext %}
                                <center><img src="{{asset(path)}}" class="w-50"></img></center>
                            </td>
                        </tr>
                        <tr>
                            <th>Date de Création</th>
                            <td><center>{{ fichier.createdAt ? fichier.createdAt|date('d/m/Y')}}</center></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
