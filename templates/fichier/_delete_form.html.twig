<form method="post" action="{{ path('app_fichier_delete', {'token': fichier.token}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fichier.token) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
</form>
